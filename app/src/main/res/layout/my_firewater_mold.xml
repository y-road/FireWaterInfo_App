    <RelativeLayout
        android:id="@+id/reLot1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/fwIsAliveTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/alive_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="사용가능"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fwNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="단구025호"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fwAddressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fwIsAliveTV"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="강원도 원주시 단구동 1682-5"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fwDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fwAddressTV"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:text="단관공원 사거리 현진 에버빌 602동 뒤 대로변"
            android:textColor="@color/color_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fwDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fwDescTV"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:text="최근 업데이트: 2022-03-08"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goToMarkerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/fwDateTV"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:text="지도로 보기"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/textSize_16"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/removeFavoriteBtn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/ic_baseline_cancel_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</RelativeLayout>