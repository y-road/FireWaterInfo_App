<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

<!--            <ImageView-->
<!--                android:id="@+id/IVEditedPhoto"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="150dp"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginStart="16dp"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_marginEnd="16dp"-->
<!--                android:layout_marginBottom="16dp" />-->

            <TextView
                android:id="@+id/TVEditedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TVEditedType"
                android:layout_marginVertical="16dp"
                android:elevation="5dp"
                android:padding="8dp"
                android:text="테스트 01호"
                android:textColor="@color/color_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVEditedType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/none_background"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="-"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVEditedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:text="0000-00-00" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>